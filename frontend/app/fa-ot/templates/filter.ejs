<form class="well filter-form">
  <%- forms.dateTimeRange({
    idPrefix: idPrefix,
    property: 'date',
    type: 'date',
    utc: true,
    labels: {text: t('PROPERTY:date'), ranges: true}
  }) %>
  <div class="form-group hidden" data-filter="stage">
    <label for="<%- id('stage') %>"><%- t('PROPERTY:stage') %></label>
    <select id="<%- id('stage') %>" class="form-control is-expandable" name="stage[]" multiple size="1" data-expanded-length="10">
      <% ['protocol', 'authorize', 'document', 'verify', 'accept', 'record', 'finished'].forEach(function(v) { %>
      <option value="<%- v %>"><%- t('stage:' + v) %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group hidden" data-filter="sapNo">
    <label for="<%- id('sapNo') %>"><%- t('PROPERTY:sapNo') %></label>
    <input id="<%- id('sapNo') %>" class="form-control" name="sapNo" type="text" style="width: 130px">
  </div>
  <div class="form-group hidden" data-filter="assetName">
    <label for="<%- id('assetName') %>"><%- t('PROPERTY:assetName') %></label>
    <input id="<%- id('assetName') %>" class="form-control" name="assetName" type="text">
  </div>
  <div class="form-group hidden" data-filter="inventoryNo">
    <label for="<%- id('inventoryNo') %>"><%- t('PROPERTY:inventoryNo') %></label>
    <input id="<%- id('inventoryNo') %>" class="form-control" name="inventoryNo" type="text" style="width: 130px">
  </div>
  <div class="form-group hidden" data-filter="value">
    <label for="<%- id('value') %>"><%- t('list:value') %></label>
    <input id="<%- id('value') %>" class="form-control" name="value" type="text" style="width: 110px">
  </div>
  <div class="form-group hidden" data-filter="costCenter">
    <label for="<%- id('costCenter') %>"><%- t('PROPERTY:costCenter') %></label>
    <input id="<%- id('costCenter') %>" name="costCenter" type="text">
  </div>
  <div class="form-group hidden" data-filter="zplx">
    <label for="<%- id('zplx') %>"><%- t('PROPERTY:zplx') %></label>
    <input id="<%- id('zplx') %>" class="form-control" name="zplx" type="text" style="width: 80px">
  </div>
  <%- renderLimit({hidden: true}) %>
  <div class="form-group filter-actions">
    <div class="btn-group">
      <button id="<%- id('submit') %>" type="submit" class="btn btn-default"><i class="fa fa-filter"></i><span><%- t('core', 'filter:submit') %></span></button>
      <button id="<%- id('reset') %>" type="button" class="btn btn-default filter-reset" title="<%- t('core', 'filter:reset') %>"><i class="fa fa-eraser"></i><span><%- t('core', 'filter:reset') %></span></button>
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="<%- t('core', 'filter:filters') %>"><span class="caret"></span></button>
      <ul class="dropdown-menu">
        <% filters.forEach(function(filter) { %>
        <li><a data-filter="<%- filter %>"><%- t.has('filter:' + filter) ? t('filter:' + filter) : t('PROPERTY:' + filter) %></a></li>
        <% }) %>
      </ul>
    </div>
  </div>
</form>
