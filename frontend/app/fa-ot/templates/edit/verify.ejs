<div class="fa-edit-stage" data-stage="verify">
  <%- helpers.props(details, [
    '!protocolNeeded',
    '!commissioningType',
    '!usageDestination',
    {id: 'protocolNo', visible: model.protocolNeeded, valueClassName: 'text-fixed'},
    {id: '!protocolDate', visible: model.protocolNeeded},
    {id: 'documentNo', valueClassName: 'text-fixed'},
    '!documentDate',
    {id: 'lineSymbol', visible: model.usageDestination === 'factory', valueClassName: 'text-fixed'},
    {id: '!owner', visible: model.protocolNeeded},
    helpers.fa.committeeProp({visible: model.protocolNeeded}),
    'supplier',
    'value',
    {id: 'costCenter', valueClassName: 'text-fixed'},
    {id: 'vendorNo', visible: model.usageDestination === 'external-supplier', valueClassName: 'text-fixed'},
    {id: 'vendorName', visible: model.usageDestination === 'external-supplier'},
    helpers.fa.attachmentProp({name: 'protocol', visible: model.protocolNeeded}),
    helpers.fa.attachmentProp({name: 'checklist'}),
    helpers.fa.attachmentProp({name: 'outlay'}),
    helpers.fa.attachmentProp({name: 'certificate', visible: model.usageDestination === 'external-supplier'}),
    helpers.fa.attachmentProp({name: 'photo', visible: model.commissioningType === 'new-asset'}),
    helpers.fa.attachmentProp({name: 'nameplate', visible: model.usageDestination === 'external-supplier'})
  ]) %>
  <div class="form-group">
    <label for="<%- id('assetName') %>" class="control-label is-required"><%- t('PROPERTY:assetName') %></label>
    <input id="<%- id('assetName') %>" name="assetName" class="form-control fa-edit-long" type="text" data-required data-maxlength="50 200">
  </div>
  <div class="fa-edit-row">
    <div class="form-group fa-edit-short">
      <label for="<%- id('inventoryNo') %>" class="control-label is-required"><%- t('PROPERTY:inventoryNo') %></label>
      <input id="<%- id('inventoryNo') %>" name="inventoryNo" class="form-control" type="text" data-required maxlength="50">
    </div>
    <div class="form-group fa-edit-short">
      <label for="<%- id('serialNo') %>" class="control-label"><%- t('PROPERTY:serialNo') %></label>
      <input id="<%- id('serialNo') %>" name="serialNo" class="form-control" type="text" maxlength="50">
    </div>
  </div>
  <div id="<%- id('zplx') %>"></div>
  <div class="form-group fa-edit-long has-required-select2">
    <label for="<%- id('assetClass') %>" class="control-label is-required"><%- t('PROPERTY:assetClass') %></label>
    <input id="<%- id('assetClass') %>" name="assetClass" type="text" data-required>
  </div>
  <div id="<%- id('fiscalValue') %>" style="margin-bottom: 15px"></div>
  <div class="form-group">
    <label for="<%- id('deprecationRate') %>" class="control-label"><%- t('PROPERTY:deprecationRate') %></label>
    <div class="input-group">
      <input id="<%- id('deprecationRate') %>" name="deprecationRate" class="form-control text-right" type="number" min="0" max="100" step="0.01" style="width: 114px">
      <div class="input-group-addon" style="width: 54px">%</div>
    </div>
  </div>
  <div class="form-group fa-edit-period" style="margin-top: -5px">
    <label for="<%- id('economicPeriodY') %>" class="control-label"><%- t('PROPERTY:economicPeriod') %></label>
    <div class="input-group">
      <input id="<%- id('economicPeriodY') %>" name="economicPeriodY" class="form-control text-right" type="number" min="0" max="99">
      <div class="input-group-addon"><%- t('fa-common', 'unit:year') %></div>
      <input id="<%- id('economicPeriodM') %>" name="economicPeriodM" class="form-control text-right" type="number" min="0" max="12">
      <div class="input-group-addon"><%- t('fa-common', 'unit:month') %></div>
    </div>
  </div>
  <div class="form-group fa-edit-period">
    <label class="control-label"><%- t('PROPERTY:fiscalPeriod') %></label>
    <div class="input-group">
      <input id="<%- id('fiscalPeriodY') %>" name="fiscalPeriodY" class="form-control text-right" type="number" min="0" max="99">
      <div class="input-group-addon"><%- t('fa-common', 'unit:year') %></div>
      <input id="<%- id('fiscalPeriodM') %>" name="fiscalPeriodM" class="form-control text-right" type="number" min="0" max="12">
      <div class="input-group-addon"><%- t('fa-common', 'unit:month') %></div>
    </div>
  </div>
  <div class="form-group">
    <label for="<%- id('tplNotes') %>" class="control-label"><%- t('PROPERTY:tplNotes') %></label>
    <textarea id="<%- id('tplNotes') %>" class="form-control" name="tplNotes" rows="3"></textarea>
  </div>
  <%- helpers.fa.attachmentFormGroup({name: 'attachment'}) %>
  <div class="form-group">
    <label for="<%- id('comment') %>" class="control-label"><%- t('PROPERTY:comment') %></label>
    <textarea id="<%- id('comment') %>" class="form-control" name="comment" rows="3"></textarea>
  </div>
</div>
