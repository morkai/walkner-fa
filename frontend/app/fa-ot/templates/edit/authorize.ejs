<div class="fa-edit-stage" data-stage="authorize">
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:commissioningType') %></label>
    <p class="form-control-static"><%- details.commissioningType %></p>
  </div>
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:protocolDate') %></label>
    <p class="form-control-static"><%- details.protocolDate %></p>
  </div>
  <% if (commissioningType === 'inc-asset') { %>
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:inventoryNo') %></label>
    <p class="form-control-static"><%= details.inventoryNo || '-' %></p>
  </div>
  <% } %>
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:assetName') %></label>
    <p class="form-control-static"><%= details.assetName %></p>
  </div>
  <% if (usageDestination === 'factory') { %>
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:lineSymbol') %></label>
    <p class="form-control-static"><%= details.lineSymbol || '-' %></p>
  </div>
  <% } %>
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:zplx') %></label>
    <ul class="text-fixed">
      <% details.zplx.forEach(function(v) { %>
      <li>ZPLX<%= v %></li>
      <% }) %>
    </ul>
  </div>
  <p class="fa-ot-protocol-statement">
    <span class="fa-ot-protocol-statement-hd"><%- t('protocol:statement:hd') %></span>
    <span class="fa-ot-protocol-statement-bd"><%- t('protocol:statement:bd') %></span>
  </p>
  <div class="form-group">
    <label class="control-label"><%- t('protocol:participants') %></label>
    <ul>
      <li><%- t('FORM:edit:committee:owner') %> <%- details.owner %></li>
      <% details.committee.forEach(function(user, i) { %>
      <li><%- t('FORM:edit:committee:person', {no: i + 1}) %> <%- user %></li>
      <% }) %>
    </ul>
  </div>
  <% if (commissioningType === 'new-asset') { %>
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:supplier') %></label>
    <p class="form-control-static"><%= details.supplier %></p>
  </div>
  <% } %>
  <div class="form-group fa-edit-long">
    <label for="<%- idPrefix %>-protocolFile" class="control-label is-required"><%- t('PROPERTY:protocolFile') %></label>
    <table class="fa-edit-attachment">
      <tbody>
      <tr>
        <td class="is-min" style="padding: 0 10px 5px 0"><%- t('FORM:edit:attachment:old') %></td>
        <td style="padding-bottom: 5px">
          <% if (details.protocolFile) { %>
            <a href="/fa/ot/<%- details._id %>/attachments/protocol" target="_blank"><%= details.protocolFile.name %></a>
          <% } else { %>
            <%- t('FORM:edit:attachment:empty') %>
          <% } %>
        </td>
      </tr>
      <tr>
        <td class="is-min" style="padding-right: 10px"><%- t('FORM:edit:attachment:new') %></td>
        <td><input id="<%- idPrefix %>-protocolFile" name="protocolFile" class="form-control" type="file" <%- details.protocolFile ? '' : 'data-required' %>></td>
      </tr>
      </tbody>
    </table>
    <% if (details.protocolFile) { %>
    <p class="help-block"><%- t('FORM:edit:attachment:help') %></p>
    <% } %>
  </div>
  <div class="form-group">
    <label for="<%- idPrefix %>-comment" class="control-label"><%- t('PROPERTY:comment') %></label>
    <textarea id="<%- idPrefix %>-comment" class="form-control" name="comment" rows="3"></textarea>
  </div>
</div>
