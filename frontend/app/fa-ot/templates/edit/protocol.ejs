<div class="fa-edit-stage" data-stage="protocol">
  <div class="form-group">
    <label class="control-label"><%- t('PROPERTY:commissioningType') %></label>
    <p class="form-control-static"><%- t('commissioningType:' + model.commissioningType) %></p>
  </div>
  <div class="form-group fa-edit-short">
    <label for="<%- id('protocolDate') %>" class="control-label is-required"><%- t('PROPERTY:protocolDate') %></label>
    <input id="<%- id('protocolDate') %>" name="protocolDate" class="form-control fa-edit-long" type="date" data-required>
  </div>
  <div class="form-group fa-edit-long">
    <label for="<%- id('assetName') %>" class="control-label is-required"><%- t('PROPERTY:assetName') %></label>
    <input id="<%- id('assetName') %>" name="assetName" class="form-control" type="text" data-required maxlength="200">
  </div>
  <% if (model.usageDestination === 'factory') { %>
  <div class="form-group fa-edit-short">
    <label for="<%- id('lineSymbol') %>" class="control-label"><%- t('PROPERTY:lineSymbol') %></label>
    <input id="<%- id('lineSymbol') %>" name="lineSymbol" class="form-control" type="text" maxlength="50">
  </div>
  <% } %>
  <div class="fa-edit-row">
    <% if (model.commissioningType === 'inc-asset') { %>
    <div class="form-group fa-edit-short">
      <label for="<%- id('inventoryNo') %>" class="control-label is-required"><%- t('PROPERTY:inventoryNo') %></label>
      <input id="<%- id('inventoryNo') %>" name="inventoryNo" class="form-control" type="text" data-required maxlength="50">
    </div>
    <% } %>
    <div class="form-group fa-edit-short">
      <label for="<%- id('serialNo') %>" class="control-label"><%- t('PROPERTY:serialNo') %></label>
      <input id="<%- id('serialNo') %>" name="serialNo" class="form-control" type="text" maxlength="50">
    </div>
  </div>
  <div id="<%- id('zplx') %>"></div>
  <p class="fa-ot-protocol-statement">
    <span class="fa-ot-protocol-statement-hd"><%- t('protocol:statement:hd') %></span>
    <span class="fa-ot-protocol-statement-bd"><%- t('protocol:statement:bd') %></span>
  </p>
  <div id="<%- id('participants') %>" style="margin-bottom: 15px"></div>
  <% if (model.commissioningType === 'new-asset') { %>
  <div class="form-group fa-edit-long" style="margin-top: -10px">
    <label for="<%- id('supplier') %>" class="control-label is-required"><%- t('PROPERTY:supplier') %></label>
    <input id="<%- id('supplier') %>" name="supplier" class="form-control" type="text" data-required>
  </div>
  <% } %>
  <%- helpers.fa.attachmentFormGroup({
    name: 'protocol',
    style: 'margin-top: ' + (model.commissioningType === 'inc-asset' ? '-10px' : '0'),
    help: false,
    required: true,
    accept: ['doc', 'img']
  }) %>
  <%- helpers.fa.attachmentFormGroup({
    name: 'photo',
    help: false,
    accept: 'img',
    visible: model.commissioningType === 'new-asset'
  }) %>
  <%- helpers.fa.attachmentFormGroup({
    name: 'attachment',
    help: !!(model.protocolFile || model.photoFile)
  }) %>
  <div class="form-group">
    <label for="<%- id('comment') %>" class="control-label"><%- t('PROPERTY:comment') %></label>
    <textarea id="<%- id('comment') %>" class="form-control" name="comment" rows="3"></textarea>
  </div>
</div>
