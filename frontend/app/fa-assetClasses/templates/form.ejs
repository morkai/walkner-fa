<form method="post" action="<%- formAction %>">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="form-group">
        <div class="checkbox">
          <label class="control-label">
            <input type="checkbox" name="active" value="true">
            <%- t('PROPERTY:active') %>
          </label>
        </div>
      </div>
      <div class="form-group">
        <label for="<%- id('name') %>" class="control-label is-required"><%- t('PROPERTY:name') %></label>
        <input id="<%- id('name') %>" class="form-control" type="text" name="name" required maxlength="100">
      </div>
      <div class="form-group">
        <label for="<%- id('description') %>" class="control-label"><%- t('PROPERTY:description') %></label>
        <textarea id="<%- id('description') %>" class="form-control" name="description" rows="3"></textarea>
      </div>
      <div class="form-group">
        <label for="<%- id('tplKey') %>" class="control-label"><%- t('PROPERTY:tplKey') %></label>
        <input id="<%- id('tplKey') %>" class="form-control text-fixed" type="text" name="tplKey" pattern="^L([0-9]{3}|U[0-9]{3})$">
      </div>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
