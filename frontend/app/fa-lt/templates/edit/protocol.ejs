<div class="fa-edit-stage" data-stage="protocol">
  <%- helpers.props(details, [
    '!kind',
    {id: 'mergeInventoryNo', visible: model.kind === 'merge'},
    {id: 'mergeLineSymbol', visible: model.kind === 'merge'},
    {id: 'mergeType', visible: model.kind === 'merge'},
    {id: 'protocolNo', valueClassName: 'text-fixed'}
  ]) %>
  <div class="form-group">
    <label for="<%- idPrefix %>-protocolDate" class="control-label is-required"><%- t('PROPERTY:protocolDate') %></label>
    <input id="<%- idPrefix %>-protocolDate" name="protocolDate" class="form-control fa-edit-short" type="date" data-required>
  </div>
  <div class="form-group fa-edit-short">
    <label for="<%- idPrefix %>-inventoryNo" class="control-label is-required"><%- t('PROPERTY:inventoryNo') %></label>
    <input id="<%- idPrefix %>-inventoryNo" name="inventoryNo" class="form-control" type="text" data-required maxlength="50">
  </div>
  <div class="form-group fa-edit-long">
    <label for="<%- idPrefix %>-assetName" class="control-label is-required"><%- t('PROPERTY:assetName') %></label>
    <input id="<%- idPrefix %>-assetName" name="assetName" class="form-control" type="text" data-required maxlength="200">
  </div>
  <div class="form-group fa-edit-short has-required-select2">
    <label for="<%- idPrefix %>-costCenter" class="control-label is-required"><%- t('PROPERTY:costCenter') %></label>
    <input id="<%- idPrefix %>-costCenter" name="costCenter" type="text" data-required>
  </div>
  <div class="form-group fa-edit-long">
    <label for="<%- idPrefix %>-applicant" class="control-label is-required"><%- t('PROPERTY:applicant') %></label>
    <input id="<%- idPrefix %>-applicant" name="applicant" type="text" data-required>
  </div>
  <div id="<%- idPrefix %>-participants" style="margin-bottom: 15px"></div>
  <div class="form-group fa-edit-long">
    <label for="<%- idPrefix %>-cause" class="control-label is-required"><%- t('PROPERTY:cause') %></label>
    <textarea id="<%- idPrefix %>-cause" name="cause" class="form-control" rows="3" data-required></textarea>
  </div>
  <%- helpers.fa.attachmentFormGroup({name: 'attachment'}) %>
  <div class="form-group">
    <label for="<%- idPrefix %>-comment" class="control-label"><%- t('PROPERTY:comment') %></label>
    <textarea id="<%- idPrefix %>-comment" class="form-control" name="comment" rows="3"></textarea>
  </div>
</div>
