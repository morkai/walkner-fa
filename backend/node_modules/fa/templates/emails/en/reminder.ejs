<p style="font-family: Arial, sans-serif; font-size: 12px">
  This is a reminder of pending documents in the Signify Ketrzyn's Fixed Assets application.
</p>
<hr>
<% if (ots.length) { %>
<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-bottom: 3px; padding-bottom: 3px;">
  OT
</h3>
<ul style="margin-top: 0; font-family: Arial, sans-serif; font-size: 12px">
  <% ots.forEach(doc => { %>
  <li>
    <a href="<%- urlPrefix %>#fa/ot/<%- doc._id %>;edit">
      <% if (doc.assetName) { %>
      <%- doc.documentNo || doc.protocolNo %>: <%= doc.assetName %>
      <% } else { %>
      <%- doc.documentNo || doc.protocolNo %>
      <% } %>
    </a>
  </li>
  <% }) %>
</ul>
<% } %>
<% if (lts.length) { %>
<h3 style="font-family: Arial, sans-serif; font-size: 15px; border-bottom: 1px solid #e5e5e5; margin-bottom: 3px; padding-bottom: 3px;">
  LT
</h3>
<ul style="margin-top: 0; font-family: Arial, sans-serif; font-size: 12px">
  <% lts.forEach(doc => { %>
  <li>
    <a href="<%- urlPrefix %>#fa/lt/<%- doc._id %>;edit">
      <% if (doc.assetName) { %>
      <%- doc.documentNo || doc.protocolNo %>: <%= doc.assetName %>
      <% } else { %>
      <%- doc.documentNo || doc.protocolNo %>
      <% } %>
    </a>
  </li>
  <% }) %>
</ul>
<% } %>
<% include _ft.ejs %>
